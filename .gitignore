"@ | Set-Content -Encoding UTF8 .gitignore

# Si existen archivos mal nombrados sin punto, elimínalos
if (Test-Path gitignore) { Remove-Item gitignore }
if (Test-Path gitattributes) { Remove-Item gitattributes }

# 2) (opcional) .gitattributes para LFS, si lo usarás
@"
